    "#currently finding the min chi square of a 3 detector geometry with a source at any angle along this axis, \n",
    "#updating right now for a later iteration that will include another dimension, and should look like a flat topped pyramid\n",
    "#can continuously add more and more detectors using this minimized chi square approach for localization. \n",
    "\n",
    "#Basic idea geometry of my (in progress) design. \n",
    "#https://www.google.com/search?q=flat+topped+pyramid&espv=2&tbm=isch&imgil=uwDql0_0HUoCKM%253A%253BWdiKXRWuoUpmYM%253Bhttp%25253A%25252F%25252Fwww.conceptdraw.com%25252Fexamples%25252Ftriangle-pyr-stencil&source=iu&pf=m&fir=uwDql0_0HUoCKM%253A%252CWdiKXRWuoUpmYM%252C_&usg=__iKBQ_mWYpg_a4sJZLtXiaKvPf9w%3D&biw=1280&bih=703&dpr=2&ved=0ahUKEwiiv7W6wpDTAhWG5CYKHaICBiIQyjcILA&ei=0pDmWKKOFIbJmwGihZiQAg#imgrc=uwDql0_0HUoCKM:\n",
    "\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import math as mth\n",
    "import random as rand\n",
    "import statistics as s\n",
    "import healpy as hp\n",
    "from mpl_toolkits.mplot3d import Axes3D\n",
    "import matplotlib.pyplot as pltx\n",
    "import numpy as np\n",
    "\n",
    "phiA=np.deg2rad(np.array([-45]))   #the tilt from the flat plane (B) along one axis\n",
    "thetaS=np.deg2rad(np.array([30]))   #currently set at the zenith , can change this in one direction but not both simultaneously (yet)\n",
    "Ao=np.array([500]) #intensity of the signal \n",
    "bg=1000\n",
    "error=[]\n",
    "x = 10   #run through x times per setup\n",
    "for j in range(len(phiA)):   #run through the possible detector orientations\n",
    "    print(\"Detector Tilt \" + str(np.rad2deg(-phiA[j]))+ \" degrees\")\n",
    "    phiB=0\n",
    "    phiC=-phiA[j]\n",
    "    dphi1=0\n",
    "    dphi=-1*phiA[j]\n",
    "    for k in range(len(Ao)):  #(optional) run through different signal strengths \n",
    "        sigma=[]    \n",
    "        bias=[]\n",
    "        eff = []   \n",
    "        for i in range(len(thetaS)):  #run through the possible source angles\n",
    "            #expected number of photons in each detector\n",
    "            A=Ao[k]*(np.sin(thetaS[i]-phiA[j]))     #signal picked up in detector A\n",
    "            countsA=max(A,0)+bg   #total number of counts caught in the detector  (including background)\n",
    "            unccountsA=np.sqrt(countsA)  #uncertainty of this value\n",
    "            B=Ao[k]*(np.sin(thetaS[i]-phiB))   #same procedure for detector 2 \n",
    "            countsB=max(B,0)+bg\n",
    "            unccountsB=np.sqrt(countsB)\n",
    "            C=Ao[k]*(np.sin(thetaS[i]-phiC))   #same process for b\n",
    "            countsC=max(C,0)+bg\n",
    "            unccountsC=np.sqrt(countsC)\n",
    "\n",
    "\n",
    "            thetaloc = []\n",
    "            theta=0\n",
    "            u=0            \n",
    "            count=0\n",
    "            #\n",
    "            while count<x:\n",
    "            #actual number of photons in each detector\n",
    "                thetaAB=0\n",
    "            #could require to be at least 1 sigma above the background, would reduce the efficency. \n",
    "                Adet=rand.gauss(countsA,unccountsA)-bg   #detected # of counts in th\n",
    "            #this signal should be above the background, if not, consider this value to be zero. \n",
    "                if Adet<0:\n",
    "                    Adet=0\n",
    "                Bdet=rand.gauss(countsB,unccountsB)-bg\n",
    "                if Bdet<0:\n",
    "                    Bdet=0   #will cause a buildup in the frequency along the edges of the histograms \n",
    "                Cdet=rand.gauss(countsC,unccountsC)-bg\n",
    "                if Cdet<0:\n",
    "                    Cdet=0\n",
    "      \n",
    "            #consider a set of possible theta, Ao(not rn)\n",
    "                chisquareds = []\n",
    "                o=np.deg2rad(np.linspace(0,180,20))\n",
    "                for s in range(len(o)):   #for each possible angle\n",
    "                    Achi=(np.sin(o[s]-phiA[j]))\n",
    "                    Bchi=(np.sin(o[s]-phiB))\n",
    "                    Cchi=(np.sin(o[s]-phiC))\n",
    "                    if Adet>0:\n",
    "                        chitermA=((Achi-Adet)/Adet)**2 #chi s just from term from A\n",
    "                    else: \n",
    "                        chitermA=0\n",
    "                    if Bdet>0:\n",
    "                        chitermB=((Bchi-Bdet)/Bdet)**2\n",
    "                    else: \n",
    "                        chitermB=0\n",
    "                    if Cdet>0:\n",
    "                        chitermC=((Cchi-Cdet)/Cdet)**2\n",
    "                    else:\n",
    "                        chitermC=0\n",
    "                    chisquared=chitermA+chitermB+chitermC   #+chitermB+...)\n",
    "                    chisquareds.append(chisquared)       # this creates a series of chi squared \n",
    "                    #find the minimum in this set, \n",
    "                chimin=np.amin(chisquareds)  #find out what term in the array this is,\n",
    #next step should be to loop through possible signal stregnths and identify the next minimized chi^2 for another estimate, then evalate uncertainty from here. 
    "                chi=chisquareds.index(chimin)\n",
    "                plt.plot(np.rad2deg(o),chisquareds,label=str(np.rad2deg(-phiA[j]))+'deg')\n",
    "                plt.plot(np.rad2deg(o[chi]),chimin,'ro')                                 #get the index number, go back to o and use that \n",
    "                print(chimin,np.rad2deg(o[chi]))\n",
    "                \n",
    "            #have just calculated the actual number of photons in each detector\n",
    "                uAB=mth.atan2(Bdet*np.sin(dphi),(Adet-Bdet*np.cos(dphi))) \n",
    "                thetaAB=uAB+phiB   #Comes from localization equation derived by hand. \n",
    "                if thetaAB > -phiA[j] and theta < np.pi+phiA[j]:   #not <= to bypass the buildup\n",
    "                    thetaloc.append(np.rad2deg(thetaAB))  #array of all the recorded values for localized theta (within acceptable range provided)\n",
    "                \n",
    "                count+=1  #1000 points\n",
    "            #using each term calculated, can generate the chi squared value \n",
    "            \n",
    "            \n",
    "\n",
    "#print(chisquared)\n",
    "\n",
    "plt.xlabel(\"Theta (deg)\")\n",
    "plt.ylabel(\"χ2 value\")\n",
    "plt.title(\"χ2 value vs. Theta\")\n",
    "plt.legend()\n",
    "plt.show()"
